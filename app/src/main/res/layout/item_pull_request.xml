<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_pr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pr_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_title" />

    <TextView
        android:id="@+id/tv_pr_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        app:layout_constraintLeft_toRightOf="@+id/tv_pr_created"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_title" />

    <ImageView
        android:id="@+id/iv_author_avatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_created" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_author_avatar"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/iv_author_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_author_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_closed" />

</androidx.constraintlayout.widget.ConstraintLayout>